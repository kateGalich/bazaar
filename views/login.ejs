<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Bazaar Login</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
  <script defer src="/vendor/fontawesome/js/brands.js"></script>
  <script defer src="/vendor/fontawesome/js/solid.js"></script>
  <script defer src="/vendor/fontawesome/js/fontawesome.js"></script>

  <!-- Custom styles for this template -->
  <link href="styles/reglogin.css" rel="stylesheet">
  <link href="styles/main.css" rel="stylesheet">
  <link href="styles/layout.css" rel="stylesheet">
</head>

<body class="text-center">
  <%- include('partials/_nav') %>
  <main class="form-signin w-100 m-auto">
    <form method="POST" action="/users/login/1">
      <i class="fa-solid fa-store fa-3x"></i>
      <h1 class="h3 mb-3 fw-normal">Log in</h1>

      <div class="form-floating">
        <input type="email" class="form-control" name="email" placeholder="name@example.com">
        <label for="email">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" name="password" placeholder="Password">
        <label for="password">Password</label>
      </div>
      <p>Not a member? <a href="/register">Register</a></p>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Log in</button>
    </form>
  </main>
</body>
</html>
